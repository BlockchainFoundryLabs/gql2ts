{
  "name": "gql2ts-base",
  "private": true,
  "version": "1.0.0",
  "description": "Convert GraphQL Schema to TypeScript defs",
  "dependencies": {
    "graphql": "^0.10.1"
  },
  "devDependencies": {
    "@types/graphql": "^0.9.3",
    "@types/jest": "^20.0.2",
    "@types/node": "^7.0.34",
    "coveralls": "^2.13.0",
    "jest": "^20.0.4",
    "lerna": "2.0.0-beta.38",
    "ts-jest": "^20.0.7",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  },
  "scripts": {
    "pretest": "lerna bootstrap --hoist graphql",
    "test": "jest --coverage",
    "coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "keywords": [
    "typescript",
    "graphql"
  ],
  "author": "Brett Jurgens <brett.jurgens@avant.com> (https://www.avant.com)",
  "license": "MIT",
  "repository": "avantcredit/gql2ts",
  "bin": {
    "gql2ts": "./index.js"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "perferGlobal": true,
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "packages/cli/tsconfig.json"
      }
    },
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true,
    "testRegex": "(/__tests__/.*-test)\\.(ts|tsx|js)$"
  }
}
